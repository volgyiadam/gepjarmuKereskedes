@model gepjarmuKereskedes.Models.Car

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Auto</legend>

        <h4>
            Márka:

            @Html.EditorFor(model => model.Brand)
            @Html.ValidationMessageFor(model => model.Brand)
        </h4>

        <h4>
            Típus:

            @Html.EditorFor(model => model.Type)
            @Html.ValidationMessageFor(model => model.Type)
        </h4>
        <hr />
        <br />
        <div class="editor-label">
            Évjárat:
        </div>
        <div class="editor-field">

            @Html.EditorFor(model => model.Vintage)
            @Html.ValidationMessageFor(model => model.Vintage)
        </div>

        <div class="editor-label">
            Gyártási idő:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ProductionTime)
            @Html.ValidationMessageFor(model => model.ProductionTime)
        </div>



        <div class="editor-label">
            Előző tulajdonosok száma:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PreviousOwners)
            @Html.ValidationMessageFor(model => model.PreviousOwners)
        </div>
        <div class="editor-label">
            Állapot:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Condition)
            @Html.ValidationMessageFor(model => model.Condition)
        </div>
        <div class="editor-label">
            Telephely:
        </div>
        <div class="editor-field">
            @Html.DropDownList("telep")
        </div>

        <p>
            <input type="submit" value="OK" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Vissza", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
